<% include ../partials/header %>
<div class="container">
  <h1 class="text-center">Editar comentario</h1>
  <div class="row">

    <div style="width: 30%; margin:25px auto;">
      <form action="/campgrounds/<%= campground_id %>/comments/<%= comment._id %>?_method=PUT" method="POST">        
        <div class="form-group">
          <input class="form-control" type="text" name="comment[text]" value="<%= comment.text %>">
        </div>
        <div class="form-group">
          <button class="btn btn-lg btn-primary btn-block">Agregar</button>
        </div>
      </form>
      <a href="/campgrounds">Atras.</a>
    </div>
  </div>
</div>

