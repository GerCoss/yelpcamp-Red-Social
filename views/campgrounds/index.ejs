<% include ../partials/header %>

<div class="container">

  <header class="jumbotron">
    <div class="container">
      <h1>Bienvenido a YelpCamp</h1>
      <p>View our hand-picked campgrounds from all over the world</p>
      <p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new">Agregar nuevo campamento</a>
      </p>
    </div>
  </header>

  <div class="row">
    <div class="col-lg-12">
      <h3>Nuestos campamentos más populares</h3>
    </div>
  </div>

  <div class="row text-center" style="display:flex; flex-wrap: wrap;">
    <% campgrounds.forEach(function(campgrounds){ %>
      <div class="col-sm-6 col-md-3">
        <div class="img-thumbnail">
          <img src="<%=campgrounds.image%>" style="width: 100%">
          <div class="caption">
            <h4><%= campgrounds.name %></h4>
            <p>
              <a href="/campgrounds/<%=campgrounds._id%>" class="btn btn-primary">Más información</a>
            </p>
          </div>
        </div>
      </div>
    <% }); %>
  </div>
</div>

<% include ../partials/footer %>
